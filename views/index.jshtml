    <div class="jumbotron sea-weed">
    <div class="container">
      <h1 class="text-center">eHu</h1>
      <form class="form-horizontal" role="search" ng-submit="search()">
        <div class="col-xs-9 col-sm-11">
          <input type="text" class="form-control" placeholder="Search" autofocus x-webkit-speech ng-model="q">
        </div>
        <button type="submit" class="btn btn-primary">
          <span class="glyphicon glyphicon-search"></span>
        </button>
      </form>
    </div>
    </div>
    
    <div class="container">
        <div ng-if="results.length == 0">
            @for(var i = 0; i < locals.hots.length; i++) {
                var hot = locals.hots[i]._source;
            <div>@hot.name --- @hot.phone</div>
            }
        </div>

      <div class="alert alert-success" ng-if="results">Get {{ results.length }} results.</div>
      <ul class="list-group">
        <li class="list-group-item" ng-repeat="result in results" ng-init="r = result._source">
          <h3>{{ r.name }}</h3>
          <p><span class="glyphicon glyphicon-phone-alt"></span>{{ r.phone }}</p>
        </li>
      </ul>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="bower_components/jquery/dist/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="bower_components/bootstrap/dist/js/bootstrap.js"></script>
    
    <script src='bower_components/angular/angular.js' type='text/javascript'></script>
    <script src='bower_components/elasticsearch/elasticsearch.angular.js' type='text/javascript'></script>
    <script src='js/ehu.js' type='text/javascript'></script>
  </body>
</html>
